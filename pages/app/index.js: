// pages/app/index.js
import { useEffect, useState } from 'react';
import { useRouter } from 'next/router';
import { createClient } from '@supabase/supabase-js';

// Supabase client (browser)
const supabase = createClient(
  process.env.NEXT_PUBLIC_SUPABASE_URL,
  process.env.NEXT_PUBLIC_SUPABASE_ANON_KEY
);

export default function AppHome() {
  const router = useRouter();

  const [loading, setLoading] = useState(true);
  const [email, setEmail] = useState(null);
  const [status, setStatus] = useState(null);

  useEffect(() => {
    async function checkAccess() {
      // 1) Get the logged-in user
      const {
        data: { user },
        error: userError,
      } = await supabase.auth.getUser();

      if (userError) {
        console.error('Error getting user:', userError);
      }

      if (!user) {
        // Not logged in â†’ go to login
        router.replace('/login');
        return;
      }

      setEmail(user.email);

      // 2) Look up their profile in Supabase by email
      const { data: profile, error: profileError } = await supabase
        .from('profiles')
        .select('subscription_status')
        .eq('email', user.email)
        .single();

      if (profileError) {
        console.error('Error fetching profile:', profileError);
      }

      const subStatus = profile?.subscription_status || 'inactive';
      setStatus(subStatus);

      // 3) If not active â†’ go to subscribe
      if (subStatus !== 'active') {
        router.replace('/subscribe');
        return;
      }

      setLoading(false);
    }

    checkAccess();
  }, [router]);

  if (loading) {
    return (
      <main style={{ maxWidth: 600, margin: '40px auto', fontFamily: 'system-ui' }}>
        <h1>Checking your subscriptionâ€¦</h1>
      </main>
    );
  }

  return (
    <main style={{ maxWidth: 600, margin: '40px auto', fontFamily: 'system-ui' }}>
      <h1>Welcome to the app ðŸŽ‰</h1>
      <p>You are logged in as: <strong>{email}</strong></p>
      <p>Subscription status: <strong>{status}</strong></p>

      <section style={{ marginTop: 24 }}>
        <h2>Your protected content</h2>
        <p>Only users with an active Stripe subscription can see this.</p>
      </section>
    </main>
  );
}
